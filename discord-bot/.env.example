# Discord Bot Configuration
# Copy this file to .env and fill in your values

# Discord Bot Token (from Discord Developer Portal)
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Application Client ID (from Discord Developer Portal)
DISCORD_CLIENT_ID=your_client_id_here

# Discord Guild (Server) ID where the bot will operate
DISCORD_GUILD_ID=your_guild_id_here

# API Token for authenticating requests from Minecraft plugin
# Generate a secure random string and use the same value in the Minecraft plugin config
API_TOKEN=your_secure_api_token_here

# REST API Server Port (default: 3000)
API_PORT=3000

# Logging Level (error, warn, info, debug)
LOG_LEVEL=info

# Log File Path (optional - logs to console only if not set)
# LOG_FILE=./logs/bot.log

# Database Path (optional - defaults to ./data/mcranksync.db)
# DATABASE_PATH=./data/mcranksync.db
